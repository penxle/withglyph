{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "env": ["PRIVATE_*", "PUBLIC_*"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["^build"],
      "dotEnv": [".env"],
      "outputs": [".svelte-kit/**", ".bifrost/**", "styled-system/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["codegen", "^build"],
      "persistent": true
    },
    "lint:svelte": {},
    "lint:typecheck": {}
  }
}
